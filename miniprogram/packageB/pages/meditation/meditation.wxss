.meditation-container {
  margin: 0;
  padding: 0;
  box-sizing: border-box !important;
  padding: 20rpx;
  background-color: #fafafa;
  min-height: 100vh;
}

/* 封面图：圆形裁剪，居中展示 */
.cover-wrapper {
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}
.cover-img {
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 音频信息：居中对齐 */
.audio-info {
  text-align: center;
  margin-bottom: 20rpx;
}
.audio-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.time-group {
  font-size: 24rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

/* 进度条：调整样式 */
.progress-slider {
  width: 90%;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}

/* 控制按钮：横向排列，居中 */
.control-group {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 60rpx;
  margin-bottom: 50rpx;
}
.control-btn {
  width: auto;
  height: auto;
  padding: 0;
  background: none;
}
.control-btn image {
  width: 60rpx;
}
.play-btn image {
  width: 80rpx;
}
.control-btn:disabled image {
  opacity: 0.3;
}

/* 音频列表：卡片式布局 */
.audio-list {
  margin-top: 20rpx;
}
.list-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}
.audio-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 15rpx;
  border-radius: 16rpx;
  margin-bottom: 15rpx;
  transition: background-color 0.3s;
}
.item-cover {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
}
.item-name {
  font-size: 26rpx;
  color: #555;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-play-icon {
  width: 30rpx;
  height: 30rpx;
  color: #66cc99;
}