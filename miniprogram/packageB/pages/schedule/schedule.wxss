/* packageB/pages/schedule/schedule.wxss */
/* 基础样式 */
.container {
    padding: 20rpx;
    background-color: #f5f7f9;
    min-height: 100vh;
  }
  
  .page-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    text-align: center;
    margin: 20rpx 0 30rpx;
  }
  
  /* 日历样式 */
  .calendar-container {
    background: white;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 30rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  }
  
  .calendar-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25rpx;
    padding: 0 10rpx;
  }
  
  .btn {
    width: 60rpx !important;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0;
    background: #f5f7f9;
    color: #333;
    font-size: 28rpx;
    border-radius: 8rpx;
  }
  
  .current-date {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
  }
  
  .week-days {
    display: flex;
    margin-bottom: 15rpx;
  }
  
  .week-day {
    width: 14.28%;
    text-align: center;
    font-size: 26rpx;
    color: #666;
    padding: 10rpx 0;
  }
  
  .calendar-grid {
    display: flex;
    flex-wrap: wrap;
  }
  
  .calendar-day {
    width: 14.28%;
    height: 100rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    position: relative;
    margin-bottom: 5rpx;
  }
  
  .day-number {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    border-radius: 50%;
    font-size: 28rpx;
  }
  
  /* 上月/下月日期样式 */
  .prev-month .day-number,
  .next-month .day-number {
    color: #ccc;
  }
  
  /* 今日样式 */
  .today .day-number {
    background-color: #e8f4ea;
    color: #8baa92;
    font-weight: 600;
  }
  
  /* 选中日期样式 */
  .selected .day-number {
    background-color: #8baa92;
    color: white;
    font-weight: 600;
  }
  
  /* 日程红点提示 */
  .dot {
    width: 12rpx;
    height: 12rpx;
    background-color: #ff4d4f;
    border-radius: 50%;
    position: absolute;
    bottom: 10rpx;
  }
  
  /* 日程区域样式 */
  .schedule-container {
    background: white;
    border-radius: 20rpx;
    padding: 25rpx;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  }
  
  .schedule-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 25rpx;
    padding-bottom: 15rpx;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .selected-date {
    font-size: 28rpx;
    font-weight: 600;
    color: #333;
  }
  
  .add-btn {
    width: 200rpx !important;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    background-color: #8baa92;
    color: white;
    font-size: 26rpx;
    border-radius: 30rpx;
    margin-right: 0rpx !important;
  }
  
  /* 空状态 */
  .empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 100rpx 0;
    color: #999;
  }
  
  .empty-img {
    width: 180rpx;
    height: 180rpx;
    margin-bottom: 20rpx;
    opacity: 0.5;
  }
  
  /* 日程列表 */
  .schedule-list {
    margin-top: 10rpx;
  }
  
  .schedule-item {
    display: flex;
    align-items: center;
    padding: 18rpx 0;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .schedule-time {
    width: 120rpx;
    font-size: 26rpx;
    color: #666;
    padding-right: 20rpx;
    border-right: 1px solid #f5f5f5;
  }
  
  .schedule-content {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    padding: 0 20rpx;
  }
  
  .delete-btn {
    width: 80rpx !important;
    height: 50rpx;
    line-height: 50rpx;
    padding: 0;
    background-color: #ff4d4f;
    color: white;
    font-size: 24rpx;
    border-radius: 6rpx;
  }
  
  /* 弹窗样式 */
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 1000;
  }
  
  .modal {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    border-top-left-radius: 20rpx;
    border-top-right-radius: 20rpx;
    padding: 30rpx;
    z-index: 1001;
  }
  
  .modal-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 30rpx;
    text-align: center;
  }
  
  .modal-input {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .modal-input text {
    width: 100rpx;
    font-size: 28rpx;
    color: #666;
  }
  
  .modal-input input {
    flex: 1;
    height: 70rpx;
    border: 1px solid #eee;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
  }
  
  .modal-btns {
    display: flex;
    gap: 20rpx;
    margin-top: 20rpx;
  }
  
  .cancel-btn, .confirm-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    font-size: 28rpx;
    border-radius: 8rpx;
  }
  
  .cancel-btn {
    background-color: #f5f5f5;
    color: #666;
  }
  
  .confirm-btn {
    background-color: #8baa92;
    color: white;
  }