.dialog-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 0;
    width: 100%;
    box-sizing: border-box;
}

.avatar-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 60rpx;
}

.avatar-title {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.avatar-btn {
    width: 100rpx !important;
    height: 100rpx;
    padding: 0;
    border-radius: 50%;
    overflow: hidden;
    background: #f5f5f5;
    position: relative;
}

.avatar-img {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #cccccc;
}

.avatar-placeholder {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #999;
}

.nickname-container {
    width: 100%;
    padding: 0 40rpx;
    margin-bottom: 60rpx;
    box-sizing: border-box;
}

.nickname-title {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 15rpx;
    display: flex;
    justify-content: center;
    text-align: center;
}

.nickname-input {
    width: 100%;
    height: 80rpx;
    padding: 0 20rpx;
    border: 1rpx solid #eee;
    border-radius: 10rpx;
    font-size: 30rpx;
    box-sizing: border-box;
}

.confirm-btn {
    width: 600rpx;
    height: 100rpx;
    line-height: 64rpx;
    background: #8baa92 !important;
    color: white !important;
    border-radius: 50rpx;
    font-size: 36rpx;
    /* margin-top: 40rpx; */
}

.confirm-btn[disabled] {
    background: #cccccc;
}

/* 基础样式 */
.container {
    padding: 40rpx 20rpx;
    min-height: 100vh;
    background-color: #f9fcf9;
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* 主按钮 */
.main-btn {
    width: 600rpx;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #8baa92;
    color: white;
    font-size: 32rpx;
    border-radius: 45rpx;
    margin-bottom: 60rpx;
}

/* 结果显示区 */
.result-container {
    width: 100%;
    background-color: #275732;
    height: 120rpx;
    line-height: 60px;
    text-align: center;
    position: absolute;
    top: 80rpx;
    box-sizing: border-box;
    opacity: 0.6;
}

.result-content {
    display: inline-block;
    font-size: 50rpx !important;
    font-weight: 700;
    color: white;
    font-size: large;
}

.highlight {
    color: #dde9e0;
    font-size: 40rpx;
    font-weight: 600;
    margin: 0 10rpx;
}

/* 空状态提示 */
.empty-tip {
    font-size: 28rpx;
    color: #999;
    margin-top: 200rpx;
}

/* 弹窗遮罩 */
.modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1000;
}

/* 弹窗容器 */
.modal {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: white;
    border-top-left-radius: 30rpx;
    border-top-right-radius: 30rpx;
    padding: 20rpx 30rpx;
    z-index: 1001;
}

/* 弹窗头部 */
.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
}

.modal-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
}

.close-btn {
    width: 60rpx !important;
    height: 60rpx !important;
    line-height: 60rpx;
    padding: 0;
    font-size: 40rpx;
    color: #999;
    background: transparent;
    margin-right: 10rpx !important;
}

/* 弹窗选择器 */
.picker-input {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border: 2rpx solid #e8f4ea;
    border-radius: 15rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    color: #333;
    margin-bottom: 40rpx;
}

/* 弹窗底部按钮 */
.modal-footer {
    display: flex;
    gap: 20rpx;
}

.cancel-btn,
.confirm-btn {
    flex: 1;
    height: 90rpx;
    line-height: 90rpx;
    padding: 0;
    font-size: 32rpx;
    border-radius: 15rpx;
}

.cancel-btn {
    background-color: #f5f7f9;
    color: #666;
}

.confirm-btn {
    background-color: #8baa92;
    color: white;
}