/* pages/index/index.wxss */
/* 全局样式 */
.page-container {
    background-color: #f5f5f5;
    min-height: 100vh;
    font-family: "PingFang SC", sans-serif;
    position: relative;
}

/* 店铺 banner */
.shop-banner {
    width: 100%;
    position: relative;
}

.shop-img {
    width: 100%;
}

.welcome-btn {
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    transform: translateX(-50%);
    background-color: #8baa92;
    color: #FFF;
    padding: 10rpx 40rpx;
    border-radius: 30rpx;
    font-size: 24rpx;
    opacity: 0.9;
}
.welcome-btn2 {
  position: absolute;
    bottom: 220rpx;
    left: 36%;
    transform: translateX(-50%);
    background-color: #8baa92;
    color: #fff;
    padding: 5rpx 40rpx;
    /* border-radius: 30rpx; */
    font-size: 24rpx;
    opacity: 0.3;
}
.miaomiao {
    width: 160rpx;
    height: 120rpx;
    position: absolute;
    top: 500rpx;
    right: 186rpx;
    animation: shake 1s ease-in-out infinite alternate;
    transform-origin: right bottom; /* 摆动中心点（底部居中，类似钟摆），可调整 */
}
/* 定义摆动动画 */
@keyframes shake {
    0% {
      transform: rotate(0deg); /* 初始角度 */
    }
    100% {
      transform: rotate(30deg); /* 最大摆动角度 */
    }
  }
/* 登录栏 */
.login-bar {
    display: flex;
    align-items: center;
    padding: 20rpx 30rpx;
    background-color: #fff;
    margin: 20rpx;
    border-radius: 15rpx;
}

.avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.login-text {
    font-size: 28rpx;
    color: #333;
    flex: 1;
}

.login-btn {
    background-color: #67c17c;
    color: #fff;
    font-size: 24rpx;
    padding: 10rpx 10rpx;
    border-radius: 20rpx;
}

/* 服务选项 */
.service-group {
    display: flex;
    justify-content: space-around;
    background-color: #fff;
    margin: 0 20rpx;
    padding: 30rpx 0;
    border-radius: 15rpx;
}

.service-item {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.service-item image {
    width: 80rpx;
    height: 80rpx;
    margin-bottom: 10rpx;
}

.service-item text {
    font-size: 26rpx;
    color: #333;
}

/* 提示栏 */
.tip-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #f0f5f0;
    padding: 20rpx 30rpx;
    margin: 20rpx;
    border-radius: 15rpx;
}

.tip-bar text {
    font-size: 24rpx;
    color: #666;
}

.phone-btn {
    font-size: 24rpx;
    color: #8baa92;
    background: none;
    padding: 0;
}

/* 底部导航 */
.tab-bar {
    display: flex;
    justify-content: space-around;
    background-color: #fff;
    padding: 15rpx 0;
    border-top: 1px solid #eee;
    position: fixed;
    bottom: 0;
    width: 100%;
}

.tab-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #999;
}

.tab-item.active {
    color: #8baa92;
}

.tab-item image {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 5rpx;
}

.tab-item text {
    font-size: 22rpx;
}

