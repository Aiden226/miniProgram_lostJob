.dialog-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0;
  width: 100%;
  box-sizing: border-box;
}

.avatar-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.avatar-btn {
  width: 100rpx !important;
  height: 100rpx;
  padding: 0;
  border-radius: 50%;
  overflow: hidden;
  background: #f5f5f5;
  position: relative;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #cccccc;
}

.avatar-placeholder {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #999;
}

.nickname-container {
  width: 100%;
  padding: 0 40rpx;
  margin-bottom: 60rpx;
  box-sizing: border-box;
}

.nickname-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
  text-align: center;
}

.nickname-input {
  width: 100%;
  height: 80rpx;
  padding: 0 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.confirm-btn {
  width: 600rpx;
  height: 100rpx;
  line-height: 64rpx;
  background: #8baa92 !important;
  color: white !important;
  border-radius: 50rpx;
  font-size: 36rpx;
  margin-top: 40rpx;
}

.confirm-btn[disabled] {
  background: #cccccc;
}