.container {
    width: 100%;
    height: 100vh;
    background-color: #f5f5f5;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
  }
  
  .header {
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #eee;
  }
  
  .select-btn {
    background-color: #07c160;
    color: #fff;
    border-radius: 6rpx;
    padding: 8rpx 16rpx;
    font-size: 28rpx;
    border: none;
  }
  
  .mode-switch {
    margin-left: auto;
    margin-right: 10rpx;
  }
  
  .mode-text {
    font-size: 28rpx;
    color: #333;
  }
  
  .content-area {
    flex: 1;
    padding: 20rpx;
    overflow: auto;
  }
  
  .edit-textarea {
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-radius: 8rpx;
    padding: 20rpx;
    font-size: 28rpx;
    line-height: 1.6;
    box-sizing: border-box;
    border: none;
    outline: none;
  }
  
  .preview-area {
    width: 100%;
    min-height: 100%;
    background-color: #fff;
    border-radius: 8rpx;
    padding: 20rpx;
    box-sizing: border-box;
  }
  
  /* MD预览样式优化 */
  .md-preview {
    font-size: 28rpx;
    line-height: 1.8;
  }
  .md-preview h1 {
    font-size: 36rpx;
    font-weight: bold;
    margin: 20rpx 0;
  }
  .md-preview h2 {
    font-size: 32rpx;
    font-weight: bold;
    margin: 18rpx 0;
  }
  .md-preview h3 {
    font-size: 30rpx;
    font-weight: bold;
    margin: 16rpx 0;
  }
  .md-preview p {
    margin: 10rpx 0;
  }
  .md-preview code {
    background-color: #f5f5f5;
    padding: 2rpx 6rpx;
    border-radius: 4rpx;
    font-size: 26rpx;
  }
  .md-preview pre {
    background-color: #f5f5f5;
    padding: 16rpx;
    border-radius: 6rpx;
    overflow-x: auto;
    margin: 10rpx 0;
  }
  .md-preview pre code {
    background-color: transparent;
    padding: 0;
  }
  .md-preview a {
    color: #07c160;
    text-decoration: underline;
  }
  .md-preview ul, .md-preview ol {
    margin: 10rpx 0 10rpx 40rpx;
  }
  .md-preview blockquote {
    border-left: 4rpx solid #eee;
    padding-left: 16rpx;
    color: #666;
    margin: 10rpx 0;
  }
  
  .empty-tip {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size: 28rpx;
  }