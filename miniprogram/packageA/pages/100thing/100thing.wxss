/* pages/100thing/100thing.wxss */
/* 基础样式 */
page {
    background-color: #f5f7f5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    padding-bottom: 60rpx;
  }
  
  .container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  /* 顶部导航 */
  .header {
    box-sizing: border-box;
    width: 100%;
    height: 100rpx;
    background-color: white;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 30rpx;
    box-shadow: 0 2rpx 10rpx rgba(139, 170, 146, 0.1);
    position: sticky;
    top: 0;
    z-index: 100;
  }
  
  .title {
    display: flex;
    align-items: center;
  }
  
  .title .icon {
    font-size: 36rpx;
    margin-right: 15rpx;
  }
  
  .title .text {
    font-size: 34rpx;
    font-weight: bold;
    color: #8baa92;
  }
  
  .top-btn {
    width: 60rpx !important;
    height: 60rpx !important;
    border-radius: 50%;
    background-color: #8baa92;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    padding: 0;
    line-height: 60rpx;
    position: absolute;
    right: 10px;
  }
  
  /* 介绍区域 */
  .intro {
    width: 90%;
    text-align: center;
    margin: 50rpx 0 70rpx;
  }
  
  .intro-title {
    font-size: 40rpx;
    font-weight: bold;
    color: #3a4a3d;
    display: block;
    margin-bottom: 25rpx;
  }
  
  .intro-desc {
    font-size: 28rpx;
    color: #666;
    line-height: 45rpx;
  }
  
  .circle-container {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    margin: 40rpx auto 0;
  }
  
  .circle-outer {
    position: absolute;
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(139, 170, 146, 0.2);
  }
  
  .circle-middle {
    position: absolute;
    top: 16rpx;
    left: 16rpx;
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(139, 170, 146, 0.4);
  }
  
  .circle-inner {
    position: absolute;
    top: 32rpx;
    left: 32rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(139, 170, 146, 0.6);
  }
  
  .circle-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 36rpx;
    font-weight: bold;
    color: #8baa92;
    white-space: nowrap;
  }
  
  /* 卡片列表 */
  .card-list {
    width: 90%;
    display: grid;
    grid-template-columns: 1fr;
    gap: 30rpx;
  }
  
  /* 卡片样式 */
  .card {
    width: 100%;
    background-color: white;
    border-radius: 20rpx;
    display: flex;
    box-shadow: 0 4rpx 20rpx rgba(139, 170, 146, 0.15);
    transition: transform 0.3s ease;
  }
  
  .card:hover {
    transform: translateY(-10rpx);
  }
  
  /* 序号侧边栏 */
  .card-number {
    width: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 36rpx;
    font-weight: bold;
    color: #8baa92;
    background-color: rgba(139, 170, 146, 0.08);
  }
  
  .type-heal {
    border-left: 8rpx solid #8baa92;
  }
  
  .type-learn {
    border-left: 8rpx solid #a8c3ad;
  }
  
  .type-fun {
    border-left: 8rpx solid #6d8c75;
  }
  
  /* 卡片内容 */
  .card-content {
    flex: 1;
    padding: 30rpx;
    display: flex;
    flex-direction: column;
  }
  
  .card-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #3a4a3d;
    margin-bottom: 20rpx;
    line-height: 45rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-detail {
    font-size: 26rpx;
    color: #666;
    line-height: 40rpx;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .card-footer {
    display: flex;
    align-items: center;
    margin-top: 25rpx;
    color: #8baa92;
    font-size: 26rpx;
  }
  
  .more {
    font-weight: 500;
  }
  
  .arrow {
    margin-left: 8rpx;
    font-size: 24rpx;
  }
  
  /* 底部信息 */
  .footer {
    margin-top: 80rpx;
    text-align: center;
    padding: 0 30rpx;
  }
  
  .footer text {
    font-size: 26rpx;
    color: #6d8c75;
    display: block;
  }
  
  .copyright {
    font-size: 22rpx;
    margin-top: 15rpx;
    color: #999;
  }
  
  /* 适配大屏幕 */
  @media (min-width: 768px) {
    .card-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .card-list {
      grid-template-columns: repeat(3, 1fr);
    }
  }