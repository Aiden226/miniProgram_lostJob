.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .header {
    display: flex;
    width: 100%;
    justify-content: space-between;
    align-items: center;
    margin: 20rpx 0 30rpx;
  }
  .header-left {
    display: inline-flex;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .date {
    font-size: 24rpx;
    color: #666;
    margin-left: 20rpx;
    margin-top: 10rpx;
  }
  
  .history-btn {
    width: 120rpx !important;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    background: #6c8ca6;
    color: white;
    font-size: 26rpx;
    margin: auto 0px !important;
  }
  
  .add-todo {
    display: flex;
    gap: 15rpx;
    margin-bottom: 30rpx;
  }
  
  .add-todo input {
    flex: 1;
    height: 80rpx;
    padding: 0 20rpx;
    background: #fff;
    border-radius: 10rpx;
    border: 1px solid #eee;
    font-size: 28rpx;
  }
  
  .add-todo button {
    width: 140rpx;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0;
    background: #418551;
    color: #fff;
    font-size: 28rpx;
  }
  
  .todo-list {
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  
  .empty {
    padding: 80rpx 0;
    text-align: center;
    color: #999;
    font-size: 28rpx;
  }
  
  .todo-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    border-bottom: 1px solid #f1f1f1;
  }
  
  .checkbox {
    width: 40rpx;
    height: 40rpx;
    border-radius: 50%;
    border: 2px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24rpx;
    margin-right: 20rpx;
  }
  
  .todo-text {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    padding: 10rpx 6rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
  }
  
  .delete-btn {
    width: 100rpx !important;
    height: 60rpx;
    line-height: 60rpx;
    padding: 0;
    background: #c74834;
    color: white;
    font-size: 24rpx;
  }