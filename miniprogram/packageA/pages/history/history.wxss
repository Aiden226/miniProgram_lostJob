.container {
    padding: 20rpx;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin: 20rpx 0 30rpx;
    color: #333;
    text-align: center;
  }
  
  .empty {
    padding: 100rpx 0;
    text-align: center;
    color: #999;
    font-size: 28rpx;
  }
  
  .history-container {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  
  .history-card {
    background: #fff;
    border-radius: 10rpx;
    padding: 20rpx;
    box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
  }
  
  .card-date {
    font-size: 28rpx;
    font-weight: bold;
    color: #1677ff;
    margin-bottom: 15rpx;
    padding-bottom: 10rpx;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .task-list {
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .task-item {
    display: flex;
    align-items: center;
    padding: 10rpx 0;
  }
  
  .task-check {
    width: 36rpx;
    height: 36rpx;
    border-radius: 50%;
    border: 2px solid #ccc;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 20rpx;
    margin-right: 15rpx;
  }
  
  .task-text {
    font-size: 26rpx;
    color: #333;
  }