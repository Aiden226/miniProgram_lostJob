<!--pages/100thing/100thing.wxml-->
<view class="container">
  <!-- 顶部导航 -->
  <view class="header">
    <view class="title">
      <text class="icon">🍃</text>
      <text class="text">你已经做了这么多有意义的事情</text>
    </view>
    <button bindtap="scrollToTop" class="top-btn">
      <text class="iconfont">↑</text>
    </button>
  </view>

  <!-- 介绍区域 -->
  <view class="intro">
  </view>

  <!-- 卡片列表 -->
  <view class="card-list">
    <view 
      wx:for="{{doneItems}}" 
      wx:key="id" 
      class="card"
      data-id="{{item.id}}"
    >
      <!-- 序号侧边 -->
      <view class="card-number {{item.id <= 30 ? 'type-heal' : (item.id <= 60 ? 'type-learn' : 'type-fun')}}">
        <text>{{index + 1}}</text>
      </view>
      
      <!-- 内容区域 -->
      <view class="card-content">
        <text class="card-title">{{item.title}}</text>
        <text class="card-detail">{{item.detail}}</text>
      </view>
    </view>
  </view>

  <!-- 底部信息 -->
  <view class="footer">
    <text>慢慢来，享受这段属于自己的时光 🌸</text>
    <text class="copyright">© 2025 辞职后重启计划</text>
  </view>
</view>