.container {
    padding: 20rpx;
    background-color: #f5f7f9;
    min-height: 100vh;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: 600;
    margin: 20rpx 0 30rpx;
    color: #333;
    text-align: center;
    padding: 15rpx 0;
  }
  
  /* 空状态样式 */
  .empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 150rpx 0;
    color: #999;
  }
  
  .empty-img {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 30rpx;
    opacity: 0.5;
  }
  
  /* 历史记录容器 */
  .history-container {
    display: flex;
    flex-direction: column;
    gap: 25rpx;
  }
  
  /* 卡片样式 */
  .history-card {
    background: white;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 5rpx 15rpx rgba(0,0,0,0.05);
  }
  
  .card-header {
    background-color: #f9faf9;
    padding: 20rpx 25rpx;
    border-bottom: 1px solid #f0f0f0;
  }
  
  .card-date {
    font-size: 30rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
  }
  
  .card-date::before {
    content: '';
    display: inline-block;
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background: #8baa92;
    margin-right: 10rpx;
  }
  
  .card-summary {
    display: flex;
    gap: 25rpx;
    flex-wrap: wrap;
  }
  
  .card-summary text {
    font-size: 24rpx;
  }
  
  .expense {
    color: #ff4d4f;
  }
  
  .income {
    color: #07c160;
  }
  
  .balance {
    color: #1677ff;
  }
  
  /* 记录列表 */
  .record-list {
    padding: 15rpx 25rpx;
  }
  
  .record-item {
    display: flex;
    align-items: center;
    padding: 18rpx 0;
    border-bottom: 1px solid #f5f5f5;
  }
  
  .record-item:last-child {
    border-bottom: none;
  }
  
  .record-icon {
    width: 44rpx;
    height: 44rpx;
    margin-right: 20rpx;
    padding: 6rpx;
    background: #f5f7f9;
    border-radius: 10rpx;
  }
  
  .record-remark {
    flex: 2;
    font-size: 26rpx;
    color: #333;
  }
  
  .record-time {
    flex: 1;
    font-size: 22rpx;
    color: #999;
    text-align: center;
  }
  
  .record-amount {
    flex: 1;
    font-size: 26rpx;
    font-weight: 500;
    text-align: right;
  }